<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#f00"
    tools:showIn="@layout/fragment_mine">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_mine_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mine_setting"
            />

        <ImageView
            android:id="@+id/iv_mine_session"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mine_session"
            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/mine_header"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_login"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金牌会员"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/btn_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/btn_level"
                android:text="193957345"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
    <!--<LinearLayout-->
        <!--android:id="@+id/ll_user_info"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/ll_login"-->
        <!--android:layout_centerHorizontal="true">-->

       <!---->
    <!--</LinearLayout>-->
</RelativeLayout>