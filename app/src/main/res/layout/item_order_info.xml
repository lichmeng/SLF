<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#91ba5550"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_orderdetail_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="订单号:"
            android:textColor="#fff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_orderdetail_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="时间:"
            android:textColor="#fff"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_orderdetail_products"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#df000000"
            android:layout_weight="1"
            android:text="商商品商品详情:详情:品详情::商品详情:商品详情:商品详情:商品详情:商品详情:商品详情:商品详情:商品详情:商品详情:商品详情:品详情:"
            android:textSize="14sp" />

        <LinearLayout
            android:background="@drawable/upomp_lthj_keybtn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_orderdetail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#f00"
                android:text="￥:"
                android:textSize="14sp" />

            <TextView
                android:textColor="#df000000"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_orderdetail_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="状态:"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_order_topaynow"
                android:layout_marginTop="5dp"
                android:textColor="#0080ff"
                android:text="去支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


