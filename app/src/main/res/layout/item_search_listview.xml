<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/default_ptr_rotate"
        android:id="@+id/iv_product_icon"
        android:layout_height="90dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_height="125dp">
        <TextView
            android:layout_width="match_parent"
            android:maxLines="2"
            android:id="@+id/tv_product_name"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="因幼儿奶粉因幼儿奶粉因幼儿奶粉因幼儿奶粉因幼儿奶粉"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="现价:668"
                android:textColor="#f00"
                android:textSize="14sp"
                android:id="@+id/tv_product_price"
                android:layout_height="wrap_content"/>
           <FrameLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="市场价:1668"
                   android:textColor="#aa333333"
                   android:gravity="center"
                   android:id="@+id/tv_product_marketPrice"
                   android:layout_marginLeft="25dp"
                   android:textSize="12sp"
                   android:layout_height="wrap_content"/>
           </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textColor="#aa333333"
            android:text="已有887人评价"
            android:maxLines="1"
            android:id="@+id/tv_product_comment"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#66333333"/>

    </LinearLayout>

</LinearLayout>